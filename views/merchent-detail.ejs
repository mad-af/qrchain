<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My EJS Project</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script>
      function autoRefresh() {
          setInterval(() => {
              window.location.reload();
          }, 5000);
      }

      window.onload = autoRefresh;
  </script>
</head>
<body>
  <nav class="navbar" style="background-color: #e3f2fd;"> 
    <div class="container-fluid">
      <a class="navbar-brand" href="/">QrChain</a>
    </div>
  </nav>
  <div class="container">
    <h1 class="mt-5"><%= data.name %></h1>
    
    <div class="card text-center">
      <div class="card-header">
        QR CHAIN
      </div>
      <div class="card-body">
        <img src="<%= qr %>" class="img-fluid" alt="qr-">
      </div>
      <div class="card-footer text-body-secondary">
        merchent: <%= data.id %>
      </div>
    </div>

    <h1 class="mt-5">Transaction</h1>
    <table class="table align-middle">
      <thead>
        <tr>
          <th scope="col">Date</th>
          <th scope="col">Hex Transaction</th>
          <th scope="col">Total</th>
          <th scope="col">Total in ZETA</th>
        </tr>
      </thead>
      <tbody>
        <% data.transactions.forEach(function(elm){ %>
        <tr>
          <td scope="row"><%= elm.createdAt %></td>
          <td><a href="https://zetachain-athens-3.blockscout.com/tx/0x752b39a996ec3d7b1ea9775f3f5b7a282ea4058bd1262971828b9e9fa08e72a9">0x752b39a996ec3d7b1ea9775f3f5b7a282ea4058bd1262971828b9e9fa08e72a9</a></td>
          <td><%= `${elm.totalRaw.amount} ${elm.totalRaw.blockchain}` %></td>
          <td><%= elm.total %> ZETA</td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

</body>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</html>